{
  "name": "create-fusion-app",
  "version": "1.0.0",
  "description": "Create a Fusion app",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc -p . && tsc-alias -p tsconfig.json && pnpm postbuild",
    "postbuild": "ts-node -r tsconfig-paths/register scripts/copyFiles",
    "dev": "npm link && cd dist && npm link create-fusion-app",
    "test:ts": "ts-node -r tsconfig-paths/register src",
    "test:js": "node dist/index.js"
  },
  "files": [
    "dist",
    "template"
  ],
  "bin": {
    "create-fusion-app": "dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.2.5",
    "@types/ora": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.1",
    "chalk": "^4.1.0",
